<Application x:Class="OOO_Sport_Products.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OOO_Sport_Products"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Title">
            <Setter Property="Control.FontFamily" Value="Angst Bold"/>
            <Setter Property="Control.FontSize" Value="36"/>
            <Setter Property="Control.HorizontalAlignment" Value="Center"/>
            <Setter Property="Control.VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="Normal">
            <Setter Property="Control.FontFamily" Value="Advent Pro"/>
            <Setter Property="Control.FontSize" Value="16"/>
            <Setter Property="Control.HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Control.VerticalAlignment" Value="Stretch"/>
        </Style>
    </Application.Resources>
</Application>
